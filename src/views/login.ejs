<%- include('includes/head.ejs') %>
<%- include('includes/nav.ejs') %>

<div class="container-agenda">
    <div class="row-agenda">
        <div class="row-2">
            <h1>Login</h1>
            <p>Faça login ou crie sua conta</p>
        </div>
        <%- include('includes/messages') %>
        <div class="row-3">
            <div class="login-container">
                <h2>Faça login</h2>
                <p>Já tem uma conta? Efetue login para modificar os contatos</p>
                <div class="login-container-form">
                    <form action="login/login" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <label for="email-login">Seu e-mail</label>
                        <input type="email" id="email-login" name="email">
                        <label for="senha-login">Sua senha</label>
                        <input type="password" id="senha-login" name="password">
                        <button>Efetuar login</button>
                    </form>
                </div>
            </div>
            <div class="register-container">
                <h2>Crie sua conta</h2>
                <p>Se você não tem uma conta, preencha o formulario</p>
                <div class="register-container-form">
                    <form action="/login/register" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <label for="email-login">Seu e-mail</label>
                        <input type="email" id="email-login" name="email">
                        <label for="senha-login">Sua senha</label>
                        <input type="password" id="senha-login" name="password">
                        <button>Efetuar cadastro</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>
<script src="../assets/js/bundle.js"></script>
  
<%- include('includes/footer.ejs') %>
